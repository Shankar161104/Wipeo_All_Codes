@model Domain.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-image: url('https://i.pinimg.com/564x/02/42/32/02423280c5e6a3d92b44f49289259673.jpg'); /* Replace with your image URL */
            background-size: cover;
            background-position: center;
        }

        .login-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 80%;
            max-width: 400px;
            height: 50vh;
            background-color: rgba(200, 245, 245, 0.8); /* Semi-transparent background to make text readable */
            border-radius: 10px;
            padding: 20px;
            box-sizing: border-box; /* Ensures padding is included in width/height */
        }

        .login-content {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-content">
            <h1>Login</h1>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
            @if (ViewData["LoginFailed"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewData["LoginFailed"]
                </div>
            }
            <div class="mt-3">
                <a href="/Home/OpeningPage" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
