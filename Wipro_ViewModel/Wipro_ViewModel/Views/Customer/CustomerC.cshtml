@model Wipro_ViewModel.Models.CustomerDetailsViewModel

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Gender</th>
            <th>Contact</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Customer.CustomerID</td>
            <td>@Model.Customer.CustomerName</td>
            <td>@Model.Customer.CustomerGender</td>
            <td>@Model.Customer.CustomerContact</td>
            <td>@Model.Customer.CustomerEmail</td>
        </tr>
    </tbody>
</table>

<h3>Customer Address Details</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.LstCustomer)
        {
            
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.PinCode</td>
                <td>@customer.City</td>
                <td>@customer.State</td>
                <td>@customer.Country</td>
            </tr>
            
        }
    </tbody>
</table>
